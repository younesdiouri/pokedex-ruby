<p id="notice"><%= notice %></p>

<h1>Types</h1>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Color</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @types.each do |type| %>
    <tr>
      <td><%= type.name %></td>
      <td><%= type_badge type.color, type.color %></td>
      <td><%= link_to 'Afficher', type, class: 'btn btn-info' %></td>
      <td><%= link_to 'Modifier', edit_type_path(type), class: 'btn btn-warning' %></td>
      <td><%= link_to 'Supprimer', type, method: :delete, data: { confirm: 'Suppression !'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Type', new_type_path %>
